{{ form_start(form) }}

<div class="card card-primary">
	<div class="card-header">
		<h3 class="card-title">Créer Cour</h3>
	</div>
	<!-- /.card-header -->
	<!-- form start -->
	
		<div class="card-body">
			<div class="form-group">
				<label for="exampleInputEmail1">Titre</label>
				{{form_widget(form.titre, {'attr' : {'class' : 'form-control' }})}}
			</div>
			<div class="form-group">
				<label for="exampleInputPassword1">Formation</label>
				{{form_widget(form.formationId, {'attr' : {'class' : 'form-control' }})}}
			</div>

			<div class="form-group">
				<label for="exampleInputPassword1">Catégorie</label>
				{{form_widget(form.descriptionCat, {'attr' : {'class' : 'form-control' }})}}
			</div>
			<div class="form-group">
				<label for="exampleInputFile">Fichier</label>
				<div class="input-group">
					
						{{form_widget(form.fichier, {'attr' : {'class' : 'form-control' }})}}
						
					
				</div>
			</div>

		</div>
		<!-- /.card-body -->

		<div class="card-footer">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
	
</div>
<button class="btn">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
